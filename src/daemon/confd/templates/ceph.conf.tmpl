[global]
  fsid = {{getv "/auth/fsid"}}
{{range gets "/global/*"}}
  {{base .Key}} = {{.Value}}{{end}}

[mon]
{{range gets "/mon/*"}}
  {{base .Key}} = {{.Value}}{{end}}
{{range gets "/mon_host/*"}}
    [mon.{{base .Key}}]
      host = {{base .Key}}
      mon_addr = {{.Value}}{{end}}

[osd]
{{range gets "/osd/*"}}
  {{base .Key}} = {{.Value}}{{end}}

[mds]
{{range gets "/mds/*"}}
  {{base .Key}} = {{.Value}}{{end}}

[client]
{{range gets "/client/*"}}
  {{base .Key}} = {{.Value}}{{end}}
{{range ls "/client_host"}}
  [{{.}}]
    {{with $key := . | printf "/client_host/%s/*"}}{{range gets $key}}
      {{base .Key}} = {{.Value}}{{end}}{{end}}
{{end}}
